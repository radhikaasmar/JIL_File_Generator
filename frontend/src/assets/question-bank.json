{
  "mutexGroups": [
    {
      "id": "scheduling_method",
      "description": "Scheduling method selection - only one can be active",
      "fields": ["days_of_week", "run_calendar"],
      "behavior": "clear_others"
    }
  ],
  "questions": [
    {
      "id": "q_csi",
      "key": "csi",
      "label": "CSI",
      "type": "text",
      "validators": [
        { "type": "required" },
        { "type": "pattern", "value": "^\\d{6}$" },
        { "type": "maxLength", "value": 6 }
      ],
      "placeholder": "6 digits only",
      "defaultValue": "169912"
    },
    {
      "id": "q_efforttype",
      "key": "efforttype",
      "label": "Effort Type",
      "type": "dropdown",
      "options": [
        { "value": "REG", "label": "REG" },
        { "value": "BAU", "label": "BAU" }
      ],
      "validators": [{ "type": "required" }]
    },
    {
      "id": "q_prodlob",
      "key": "prodlob",
      "label": "Prod/LOB Name",
      "type": "dropdown",
      "options": [
        { "value": "DEP", "label": "DEP" },
        { "value": "BCD", "label": "BCD" },
        { "value": "CRS", "label": "CRS" },
        { "value": "MTG", "label": "MTG" },
        { "value": "INV", "label": "INV" },
        { "value": "PLN", "label": "PLN" },
        { "value": "XLOB", "label": "XLOB" }
      ],
      "validators": [{ "type": "required" }]
    },
    {
      "id": "q_purpose",
      "key": "purpose",
      "label": "Purpose",
      "type": "text",
      "placeholder": "ebsim, ppnr, acq, ...",
      "validators": [{ "type": "required" }]
    },
    {
      "id": "q_loadfreq",
      "key": "loadfreq",
      "label": "Load Frequency",
      "type": "dropdown",
      "options": [
        { "value": "D", "label": "Daily (D)" },
        { "value": "W", "label": "Weekly (W)" },
        { "value": "M", "label": "Monthly (M)" },
        { "value": "C", "label": "Custom (C)" }
      ],
      "validators": [{ "type": "required" }]
    },
    {
      "id": "q_loadlayer",
      "key": "loadlayer",
      "label": "Load Layer",
      "type": "dropdown",
      "options": [
        { "value": "STG", "label": "STG" },
        { "value": "STD", "label": "STD" },
        { "value": "EXT", "label": "EXT" }
      ],
      "validators": [{ "type": "required" }]
    },
    {
      "id": "q_funofjob",
      "key": "funofjob",
      "label": "Function of Job",
      "type": "dropdown",
      "options": [
        { "value": "boxfunc", "label": "boxFUNC" },
        { "value": "ing", "label": "ING" },
        { "value": "dq", "label": "DQ" },
        { "value": "ext", "label": "EXT" },
        { "value": "ld", "label": "LD" },
        { "value": "ndm", "label": "NDM" },
        { "value": "pg", "label": "PG" },
        { "value": "rp", "label": "RP" },
        { "value": "rv", "label": "RV" },
        { "value": "re", "label": "RE" },
        { "value": "cs", "label": "CS" },
        { "value": "purge", "label": "PURGE" },
        { "value": "pub", "label": "PUB" },
        { "value": "drv", "label": "DRV" },
        { "value": "fw", "label": "FW" },
        { "value": "cfw", "label": "CFW" }
      ],
      "validators": [{ "type": "required" }]
    },
    {
      "id": "q_jobtitle",
      "key": "jobtitle",
      "label": "Job Type",
      "type": "dropdown",
      "options": [
        { "value": "fw", "label": "FW" },
        { "value": "box", "label": "BOX" },
        { "value": "cmd", "label": "CMD" },
        { "value": "cfw", "label": "CFW" }
      ],
      "validators": [{ "type": "required" }]
    },
    {
      "id": "q_environments",
      "key": "environments",
      "label": "Environment(s)",
      "type": "checkbox-group",
      "options": [
        { "key": "dev", "label": "DEV" },
        { "key": "prod", "label": "PROD" },
        { "key": "cob", "label": "COB" },
        { "key": "uat", "label": "UAT" }
      ],
      "validators": []
    },
    {
      "id": "q_environments_details",
      "key": "environments_details",
      "label": "Environment Details",
      "type": "environments-group",
      "environments": [
        {
          "key": "dev",
          "label": "DEV",
          "fields": [
            { "key": "owner", "label": "Owner-FID (DEV)", "type": "text" },
            { "key": "machine", "label": "Machine (DEV)", "type": "text" },
            { "key": "command", "label": "Command (DEV)", "type": "text" }
          ]
        },
        {
          "key": "prod",
          "label": "PROD",
          "fields": [
            { "key": "owner", "label": "Owner-FID (PROD)", "type": "text" },
            { "key": "machine", "label": "Machine (PROD)", "type": "text" },
            { "key": "command", "label": "Command (PROD)", "type": "text" }
          ]
        },
        {
          "key": "cob",
          "label": "COB",
          "fields": [
            { "key": "owner", "label": "Owner-FID (COB)", "type": "text" },
            { "key": "machine", "label": "Machine (COB)", "type": "text" },
            { "key": "command", "label": "Command (COB)", "type": "text" }
          ]
        },
        {
          "key": "uat",
          "label": "UAT",
          "fields": [
            { "key": "owner", "label": "Owner (UAT)", "type": "text" },
            { "key": "machine", "label": "Machine (UAT)", "type": "text" },
            { "key": "command", "label": "Command (UAT)", "type": "text" }
          ]
        }
      ]
    },
    {
      "id": "q_permission",
      "key": "permission",
      "label": "Permission",
      "type": "text"
    },
    {
      "id": "q_date_conditions",
      "key": "date_conditions",
      "label": "Date Conditions",
      "type": "dropdown",
      "options": [
        { "value": 1, "label": "Yes (1)" },
        { "value": 0, "label": "No (0)" }
      ]
    },
    {
      "id": "q_days_of_week",
      "key": "days_of_week",
      "label": "Days of the week",
      "type": "mcq_multi",
      "options": [
        { "value": "mo", "label": "Monday" },
        { "value": "tu", "label": "Tuesday" },
        { "value": "we", "label": "Wednesday" },
        { "value": "th", "label": "Thursday" },
        { "value": "fr", "label": "Friday" },
        { "value": "sa", "label": "Saturday" },
        { "value": "su", "label": "Sunday" }
      ],
      "dependsOn": {
        "field": "loadfreq",
        "showWhen": ["D", "W"],
        "description": "Visible when Load Frequency is Daily or Weekly"
      }
    },
    {
      "id": "q_run_calendar",
      "key": "run_calendar",
      "label": "Run Calendar",
      "type": "text",
      "placeholder": "Enter calendar name",
      "validators": [],
      "dependsOn": {
        "field": "loadfreq",
        "showWhen": ["M", "C"],
        "description": "Visible when Load Frequency is Monthly or Custom"
      }
    },
    {
      "id": "q_conditions",
      "key": "conditions",
      "label": "Conditions",
      "type": "conditions-array",
      "item": {
        "type": "group",
        "fields": [
          {
            "key": "type",
            "label": "Type",
            "type": "dropdown",
            "options": [
              { "value": "success", "label": "Success" },
              { "value": "failure", "label": "Failure" },
              { "value": "terminated", "label": "Terminated" },
              { "value": "done", "label": "Done" },
              { "value": "notrunning", "label": "Not Running" },
              { "value": "started", "label": "Started" }
            ]
          },
          {
            "key": "job",
            "label": "Job",
            "type": "text",
            "placeholder": "e.g., jobA"
          },
          {
            "key": "logic",
            "label": "Logic",
            "type": "dropdown",
            "options": [
              { "value": "and", "label": "AND" },
              { "value": "or", "label": "OR" }
            ]
          }
        ]
      }
    },
    {
      "id": "q_description",
      "key": "description",
      "label": "Description",
      "type": "text",
      "placeholder": "Brief description of the job",
      "jilFormat": { "type": "quoted" }
    },
    {
      "id": "q_alarm_if_fail",
      "key": "alarm_if_fail",
      "label": "Alarm if Fail",
      "type": "dropdown",
      "options": [
        { "value": 1, "label": "Yes (1)" },
        { "value": 0, "label": "No (0)" }
      ]
    },
    {
      "id": "q_alarm_if_terminated",
      "key": "alarm_if_terminated",
      "label": "Alarm if Terminated",
      "type": "dropdown",
      "options": [
        { "value": 1, "label": "Yes (1)" },
        { "value": 0, "label": "No (0)" }
      ]
    },
    {
      "id": "q_timezone",
      "key": "timezone",
      "label": "Timezone",
      "type": "dropdown",
      "options": [
        { "value": "US CENTRAL", "label": "US CENTRAL" },
        { "value": "US EASTERN", "label": "US EASTERN" }
      ],
      "validators": []
    },
    {
      "id": "q_start_time",
      "key": "start_time",
      "label": "Start Time",
      "type": "time",
      "validators": [],
      "jilFormat": { "type": "quoted" }
    },
    {
      "id": "q_command",
      "key": "command",
      "label": "Command",
      "type": "text",
      "placeholder": "Enter command, executable, script, or batch file",
      "validators": [],
      "jilFormat": { "type": "quoted" }
    },
    {
      "id": "q_term_run_time",
      "key": "term_run_time",
      "label": "Terminal Run Time (minutes)",
      "type": "text",
      "placeholder": "Enter time in minutes",
      "validators": [
        { "type": "pattern", "value": "^[0-9]+$" }
      ]
    },
    {
      "id": "q_std_out_file",
      "key": "std_out_file",
      "label": "Standard Output File",
      "type": "text",
      "placeholder": "Enter output file path",
      "validators": [],
      "jilFormat": { "type": "quoted" }
    },
    {
      "id": "q_std_err_file",
      "key": "std_err_file",
      "label": "Standard Error File",
      "type": "text",
      "placeholder": "Enter error file path",
      "validators": [],
      "jilFormat": { "type": "quoted" }
    },
    {
      "id": "q_profile",
      "key": "profile",
      "label": "Profile",
      "type": "text",
      "placeholder": "Enter profile information",
      "validators": []
    },
    {
      "id": "q_envvars",
      "key": "envvars",
      "label": "Environment Variables",
      "type": "text",
      "placeholder": "parm_name=parm_value, parm_name2=parm_value2",
      "validators": []
    },
    {
      "id": "q_max_run_alarm",
      "key": "max_run_alarm",
      "label": "Max Run Alarm (minutes)",
      "type": "text",
      "placeholder": "Enter maximum run time in minutes",
      "validators": [
        { "type": "pattern", "value": "^[0-9]+$" }
      ]
    },
    {
      "id": "q_job_load",
      "key": "job_load",
      "label": "Job Load",
      "type": "text",
      "placeholder": "Enter load units (up to 10 digits)",
      "defaultValue": "0",
      "validators": [
        { "type": "pattern", "value": "^[0-9]{1,10}$" }
      ]
    },
    {
      "id": "q_priority",
      "key": "priority",
      "label": "Priority",
      "type": "text",
      "placeholder": "Enter priority level (0 = immediate, 1+ = queued)",
      "defaultValue": "0",
      "validators": [
        { "type": "pattern", "value": "^[0-9]+$" }
      ]
    },
    {
      "id": "q_watch_file",
      "key": "watch_file",
      "label": "Watch File",
      "type": "text",
      "placeholder": "Enter file path to watch",
      "validators": [],
      "jilFormat": { "type": "quoted" }
    },
    {
      "id": "q_watch_interval",
      "key": "watch_interval",
      "label": "Watch Interval (seconds)",
      "type": "text",
      "placeholder": "Enter interval in seconds",
      "defaultValue": "60",
      "validators": [
        { "type": "pattern", "value": "^[0-9]+$" }
      ]
    },
    {
      "id": "q_box_name",
      "key": "box_name",
      "label": "Box Name",
      "type": "text",
      "readonly": true,
      "validators": [],
      "placeholder": "Auto-generated from job configuration"
    },
    {
      "id": "q_machine",
      "key": "machine",
      "label": "Machine",
      "type": "text",
      "placeholder": "Enter machine name",
      "validators": []
    },
    {
      "id": "q_status",
      "key": "status",
      "label": "Status",
      "type": "dropdown",
      "defaultValue": "inactive",
      "options": [
        { "value": "failure", "label": "failure" },
        { "value": "inactive", "label": "inactive" },
        { "value": "on_hold", "label": "on_hold" },
        { "value": "on_ice", "label": "on_ice" },
        { "value": "on_noexec", "label": "on_noexec" },
        { "value": "success", "label": "success" },
        { "value": "terminated", "label": "terminated" }
      ],
      "validators": [{ "type": "required" }]
    },
     {
      "id": "q_conditions2",
      "key": "conditions2",
      "label": "Conditions2",
      "type": "conditions-array",
      "item": {
        "type": "group",
        "fields": [
          {
            "key": "type",
            "label": "Type",
            "type": "dropdown",
            "options": [
              { "value": "success", "label": "Success" },
              { "value": "failure", "label": "Failure" },
              { "value": "terminated", "label": "Terminated" },
              { "value": "done", "label": "Done" },
              { "value": "notrunning", "label": "Not Running" },
              { "value": "started", "label": "Started" }
            ]
          },
          {
            "key": "job",
            "label": "Job",
            "type": "text",
            "placeholder": "e.g., jobA"
          },
          {
            "key": "logic",
            "label": "Logic",
            "type": "dropdown",
            "options": [
              { "value": "and", "label": "AND" },
              { "value": "or", "label": "OR" }
            ]
          }
        ]
      }
    },
    {
      "id": "q_extra",
      "key": "extra",
      "label": "Extra",
      "type": "text",
      "placeholder": "Enter extra information",
      "validators": []
    },
    {
      "id": "q_extra2",
      "key": "extra2",
      "label": "Extra 2",
      "type": "text",
      "placeholder": "Enter extra information",
      "validators": []
    },
    {
      "id": "q_funofbox",
      "key": "funofbox",
      "label": "Function of Box",
      "type": "text",
      "validators": [{ "type": "required" }]
    }
  ]
}
